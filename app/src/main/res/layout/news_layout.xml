<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/newsCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/con" />
            <TextView
                android:id="@+id/newsHeadline"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:ellipsize="end"
                android:padding="5dp"
                android:text="Maj  djhihdiud hshsd hihu uhsiu glhbh jbj hbj jhb jb "
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/newsSummary"
                    android:layout_width="280dp"
                    android:layout_height="20dp"

                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:text="hey i love you ga u ow are yo siiw sine sin"
                    android:textStyle="italic"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:textSize="11sp"
                    />
                <TextView
                    android:id="@+id/publishedAt"
                    android:layout_width="95dp"
                    android:layout_height="20dp"

                    android:gravity="center"

                    android:textSize="13dp"
                    android:textColor="@color/material_dynamic_neutral20"
                    android:text="Jan 25,2020"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
</RelativeLayout>